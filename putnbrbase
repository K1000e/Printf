void	ft_putnbr_base_fd(int n, char *base, int base_len, int fd)
{
	if (n == -2147483648)
	{
		ft_putchar_fd('-', fd);
		ft_putchar_fd('2', fd);
		n = 147483648;
	}
	if (n < 0)
	{
		ft_putchar_fd('-', fd);
		n = -n;
	}
	if (n >= 10)
		ft_putnbr_base_fd(n / base_len, base, base_len, fd);
	ft_putchar_fd(base[n % base_len], fd);
}
